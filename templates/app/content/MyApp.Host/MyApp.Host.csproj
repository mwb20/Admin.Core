<Project Sdk="Microsoft.NET.Sdk.Web">
	<PropertyGroup>
		<Description>MyApp接口宿主</Description>
		<TargetFramework>net9.0</TargetFramework>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DocumentationFile></DocumentationFile>
		<NoWarn>1701;1702;1591;8632;SYSLIB0020;CS8002;NU1902;NU1903;NU1904;</NoWarn>
	</PropertyGroup>

	<ItemGroup>
		<Content Include="ConfigCenter\createdbsql.txt">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\MyApp.Api\MyApp.Api.csproj" />
	</ItemGroup>

	<!--#if (!NoTests) -->
	<ItemGroup>
		<InternalsVisibleTo Include="MyApp.Tests" />
	</ItemGroup>
	<!--#endif -->
	
	<ItemGroup>
		<!--#if (!NoCap) -->
		<PackageReference Include="DotNetCore.CAP.Dashboard" Version="8.3.5" />
		<PackageReference Include="DotNetCore.CAP.InMemoryStorage" Version="8.3.5" />
		<PackageReference Include="Savorboard.CAP.InMemoryMessageQueue" Version="8.2.1" />
		<!--#endif -->
		<!--#if (DbType == "MySql") -->
		<PackageReference Include="FreeSql.Provider.MySql" Version="3.5.210" />
		<!--#elseif (DbType == "SqlServer") -->
		<PackageReference Include="FreeSql.Provider.SqlServer" Version="3.5.210" />
		<!--#elseif (DbType == "PostgreSQL") -->
		<PackageReference Include="FreeSql.Provider.PostgreSQL" Version="3.5.210" />
		<!--#elseif (DbType == "Oracle") -->
		<PackageReference Include="FreeSql.Provider.Oracle" Version="3.5.210" />
		<!--#elseif (DbType == "Firebird") -->
		<PackageReference Include="FreeSql.Provider.Firebird" Version="3.5.210" />
		<!--#elseif (DbType == "MsAccess") -->
		<PackageReference Include="FreeSql.Provider.MsAccess" Version="3.5.210" />
		<!--#elseif (DbType == "Dameng") -->
		<PackageReference Include="FreeSql.Provider.Dameng" Version="3.5.210" />
		<!--#elseif (DbType == "ShenTong") -->
		<PackageReference Include="FreeSql.Provider.ShenTong" Version="3.5.210" />
		<!--#elseif (DbType == "KingbaseES") -->
		<PackageReference Include="FreeSql.Provider.KingbaseES" Version="3.5.210" />
		<!--#elseif (DbType == "GBase") -->
		<PackageReference Include="FreeSql.Provider.GBase" Version="3.5.210" />
		<!--#elseif (DbType == "ClickHouse") -->
		<PackageReference Include="FreeSql.Provider.ClickHouse" Version="3.5.210" />
		<!--#elseif (DbType == "QuestDb") -->
		<PackageReference Include="FreeSql.Provider.QuestDb" Version="3.5.210" />
		<!--#elseif (DbType == "Xugu") -->
		<PackageReference Include="FreeSql.Provider.Xugu" Version="3.5.210" />
		<!--#else -->
		<PackageReference Include="FreeSql.Provider.Sqlite" Version="3.5.210" />
		<!--#endif -->
		<!--#if (!NoApiUI) -->
		<PackageReference Include="ZhonTai.ApiUI" Version="9.1.3" />
		<!--#endif -->
	</ItemGroup>
	
	<ItemGroup>
		<Content Update="wwwroot\*\*">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		<Content Update="wwwroot\*\*\*\*">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
		<Content Update="wwwroot\*\*\*\*\*">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>
	<ItemGroup>
	  <None Update="ip2region.xdb">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </None>
	</ItemGroup>

	<Target Name="AfterTargetsPublish" AfterTargets="Publish">
		<ItemGroup>
			<PackageReferenceXmlFiles Include="*\*\*\*.xml" />
			<PackageReferenceJsonFiles Include="*\*\*\Resources\*.json" />
		</ItemGroup>
		<Copy SourceFiles="@(PackageReferenceXmlFiles)" DestinationFolder="$(PublishDir)" />
		<Copy SourceFiles="@(PackageReferenceJsonFiles)" DestinationFolder="$(PublishDir)Resources" />
	</Target>
</Project>
